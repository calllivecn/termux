
export LANG=zh_CN.UTF-8

if [ -d $HOME/bin ];then
	export PATH=$PATH:$HOME/bin
fi

# 设置termux hostname
if [ -r $PREFIX/etc/hostname ];then
	TERMUX_HOSTNAME=$(cat $PREFIX/etc/hostname)
else
	TERMUX_HOSTNAME="termux-hostname-not-set"
fi

export TERMUX_HOSTNAME

# auto start
for i in $HOME/.autostart.d/*.sh;
do
	if [ -r $i ];then
		bash $i
	fi
done

unset i
#########


